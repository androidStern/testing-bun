# Dockerfile.claude
# Docker container for running Claude Code with this project's test suite
#
# Build:
#   bun run sandbox:build
#
# Run:
#   bun run sandbox
#
# Inside container:
#   claude login                           # First time - authorize in browser
#   claude --dangerously-skip-permissions  # Run Claude

FROM node:22-bookworm

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install -y gh sudo \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user (Claude refuses --dangerously-skip-permissions as root)
RUN useradd -m -s /bin/bash -G sudo agent \
    && echo "agent ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Install Bun for agent user
USER agent
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/home/agent/.bun/bin:$PATH"

# Install Claude Code globally (as root, then switch back)
USER root
RUN npm install -g @anthropic-ai/claude-code

# Set up working directory with correct ownership
WORKDIR /app
RUN chown agent:agent /app

USER agent

# Copy and install deps
COPY --chown=agent:agent package.json bun.lock* ./
RUN bun install

# Install Playwright with system deps (needs sudo)
RUN sudo npx playwright install --with-deps chromium

# Copy project
COPY --chown=agent:agent . .

ENV CI=true

CMD ["/bin/bash"]
